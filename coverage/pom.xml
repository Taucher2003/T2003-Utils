<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>t2003-utils</artifactId>
        <groupId>com.gitlab.taucher2003</groupId>
        <version>${t2003-utils.version}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.gitlab.taucher2003.t2003-utils</groupId>
    <artifactId>coverage</artifactId>

    <name>T2003-Utils â€º Coverage</name>
    <description>Coverage aggregator for T2003-Utils</description>

    <dependencies>
        <dependency>
            <groupId>com.gitlab.taucher2003.t2003-utils</groupId>
            <artifactId>common</artifactId>
            <version>${t2003-utils.version}</version>
        </dependency>
        <dependency>
            <groupId>com.gitlab.taucher2003.t2003-utils</groupId>
            <artifactId>log</artifactId>
            <version>${t2003-utils.version}</version>
        </dependency>
        <dependency>
            <groupId>com.gitlab.taucher2003.t2003-utils</groupId>
            <artifactId>tjda</artifactId>
            <version>${t2003-utils.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.8</version>
                <executions>
                    <execution>
                        <id>report-aggregate</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report-aggregate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>